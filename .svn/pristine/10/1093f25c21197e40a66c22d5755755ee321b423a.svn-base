<?php
/**
 * Para bloqueio de acesso
 * ja no index
 */
$access = true;
$access_endpoint = true;

/**
 * end point sem bloqueio
 */
$allow_endpoint = [
    'address' => 'Endereco pelo cep'
];

/**
 * Metodo do request
 */
$endpoint = explode("/", $_SERVER['REQUEST_URI'])[1];

/**
 * Valida endpoint request
 */
if(!array_key_exists($endpoint, $allow_endpoint))
{
    $access_endpoint = false;
}

/**
 * End point nao liberado, checar ip
 */
if(!$access_endpoint)
{
    /**
     * Ips permitidos
     */
    $ips_liberados = [
        '127.0.0.1' => 'Local',
        '162.213.36.234' => 'App',
        '162.213.37.237' => 'Banco',
        '162.213.36.216' => 'Dev',
        '201.6.135.248' => 'Net Virtua',
        '177.189.208.227' => 'Vivo',
        '54.165.108.234' => 'MoipCallback',
        '191.181.13.183' => 'ShopLineItau'
    ];

    /**
     * Ip request origin
     */
    $ip = $_SERVER['REMOTE_ADDR'];

    /**
     * Valida request
     */
    if(!array_key_exists($ip, $ips_liberados))
    {
        $access = false;
    }
}

/**
 * Acesso liberado ?
 */
if(!$access)
{
    header('Content-Type: application/json');
    header('Accept: application/json');
    http_response_code(401);
    $data = [
        'request_id' => md5(time()),
        'message' => 'Acesso restrito',
        'code' => 401,
        'success' => false,
        'data' => [
            'count' => 0,
            'result' => [],
            'errors' => [
                0 => 'Acesso nÃ£o autorizado para este IP'
            ]
        ]
    ];
    echo json_encode($data);
    die;
}

